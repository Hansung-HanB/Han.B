<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/postscript_layout_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <RatingBar
            android:layout_column="1"
            android:id="@+id/ratingBar_postscript_item"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_gravity="left"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5"
            android:progressTint="#025E73"
            android:progressBackgroundTint="#025E73"
            android:secondaryProgressTint="#025E73" />

        <TextView
            android:paddingTop="5dp"
            android:id="@+id/program_postscript_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_gravity="left"
            android:id="@+id/postscript_postscript_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
